/**app.wxss**/
@import './styles/weui.wxss';
@import './styles/iconfont.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.page-bg-title {
  height: 40pt;
  line-height: 40pt;
  padding-left: 13px;
  font-size: 15px;
  background: #f5f5f5;
}

.edit-btn {
  position: fixed;
  right: 14px;
  bottom: 55px;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(to top right, #fe830a, #ffc90e);
}

.edit-btn image {
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx;
}

.record-btn {
  position: fixed;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(to top right, #fe830a, #ffc90e);
}

.weui-cells {
  font-size: 28rpx;
  color: #252525;
}

.weui-cells:before {
  border-top: 1rpx solid #f0f0f0;
}

.weui-cells:after {
  border-bottom: 1rpx solid #f0f0f0;
}

.weui-cell {
  padding: 7px 15px;
}

.weui-cell:before {
  left: 0;
  border-top: 1rpx solid #f0f0f0;
}

.weui-label {
  color: #7d7d7d;
}

button[type=primary] {
  border-radius: 23px;
  background-color: #ffc438;
}

button[disabled] {
  background: #ffc438 !important;
}
button[type=primary]:hover,
.button-hover,
.other-button-hover {
  background: #ffc438 !important;
}

.phcolor {
  color: #d7d7d7;
}

view {
  font-size: 28rpx;
}

/* 未选中的 背景样式 */

radio .wx-radio-input {
  border-radius: 0; /* 圆角 */
  width: 48rpx;
  height: 48rpx;
}

/* 选中后的 背景样式 */

radio .wx-radio-input.wx-radio-input-checked {
  border: none;
  background: #ffc438;
}

/* 选中后的 对勾样式 */

radio .wx-radio-input.wx-radio-input-checked::before {
  border: none;
  border-radius: 0; /* 圆角 */
  width: 50rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 50rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: #ffc438;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.weui-navbar {
  border-bottom-color: #E9E9E9;
}
.weui-navbar__item + .weui-navbar__item .weui-navbar__title{
  border-left: 1px solid #d7d7d7;
}
.weui-navbar__slider {
  width: 50px;
  height: 2px;
}