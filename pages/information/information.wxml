<view class="page">
  <view class="page-bg-title">
    发布的消息
  </view>
  <navigator wx:for="{{messageList}}" wx:key="{{item.id}}" url='./dynamic' style='padding: 20px 10px 0;'>
    <view class='card'>
      <view class='card-title'>{{item.title}}</view>
      <view class='card-content'>{{item.news_content}}</view>
      <image class='card-image' src="{{item.news_image}}"></image>
      <view class='card-footer'>
        <image src='/static/images/look.png' style='width: 55rpx;'></image>
        <text>{{item.count}}</text>
        <image src='/static/images/comment.png' style='width: 40rpx;'></image>
        <text>{{item.leaveCount}}</text>
      </view>
    </view>
  </navigator>
  <view class='edit-btn'>
    <image src='/static/images/edit.png' bindtap='edit'></image>
  </view>
</view>