<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">姓名</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder-class="phcolor" placeholder="请输入真实姓名" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">性别</view>
    </view>
    <view class="weui-cell__bd">
      <radio-group class="radio-group" bindchange="radioChange">
        <label class="radio">
          <radio value="" checked="{{true}}" />男
        </label>
        <label class="radio">
          <radio value="" checked="{{false}}" />女
        </label>
      </radio-group>
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">毕业院校</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder-class="phcolor" placeholder="请输入毕业院校" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">辅导课程</view>
    </view>
    <view class="weui-cell__bd">
      <picker mode="multiSelector" value="{{curriculum}}" range="{{curriculumList}}" bindchange="curriculumChange" bindcolumnchange="curriculumColumnChange">
        <view class="weui-input">{{curriculumList[0][curriculum[0]]}},{{curriculumList[1][curriculum[1]]}}</view>
      </picker>
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">所在城市</view>
    </view>
    <view class="weui-cell__bd">
      <picker mode="region" value="{{region}}" start="09:01" end="21:01" bindchange="bindRegionChange">
        <view class="weui-input">{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
      </picker>
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">手机号</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder-class="phcolor" placeholder="请输入手机号" />
    </view>
    <view class="weui-cell__ft" style='padding-top: 4rpx;'>
      <button class="weui-btn" type="primary" size="mini">获取验证码</button>
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">验证码</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder-class="phcolor" placeholder="请输入验证码" />
    </view>
  </view>
</view>
  <view class="weui-cell_vcode" style='padding: 0 12px;margin: 70rpx 0 44rpx;'>
    <button class="weui-btn" type="primary" bindtap='next'>下一步</button>
  </view>
  <view style='text-align: center;'>
    注册即代表阅读并同意
    <text style='color: #219bf8;'>使用条款</text>和 
    <text style='color: #219bf8;'>隐私政策</text>
  </view>