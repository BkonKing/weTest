<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">照片</view>
    </view>
    <view class="weui-cell__bd" style='height: 80rpx;padding: 10px 0;'>
      <image class='picture' src='{{teacherinfo.teacherImage}}'></image>
    </view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">姓名</view>
    </view>
    <view class="weui-cell__bd">{{teacherinfo.teacherName}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">性别</view>
    </view>
    <view class="weui-cell__bd">{{teacherinfo.teacherSex?'男':'女'}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">毕业院校</view>
    </view>
    <view class="weui-cell__bd">{{teacherinfo.graduateSchool}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">辅导课程</view>
    </view>
    <view class="weui-cell__bd">{{classText}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">所在城市</view>
    </view>
    <view class="weui-cell__bd">{{city}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">个人简介</view>
    </view>
    <view class="weui-cell__bd">{{teacherinfo.teacherInfo}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">获取荣誉</view>
    </view>
    <view class="weui-cell__bd">{{teacherinfo.teacherHonor}}</view>
  </view>
  <view class="weui-cell_vcode" style='padding: 0 12px;margin: 70rpx 0 44rpx;'>
    <button class="weui-btn" type="primary" bindtap="amend">修改</button>
    <button class="weui-btn" type="primary" bindtap="toWorkbench">进入工作台</button>
  </view>
</view>