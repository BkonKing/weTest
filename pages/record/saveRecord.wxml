<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">标题</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder-class="phcolor" placeholder="请输入标题" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">课程简介</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder-class="phcolor" placeholder="请输入课程简介" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">专辑名称</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder-class="phcolor" placeholder="请输入专辑名称" />
    </view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="weui-label">照片</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-uploader">
        <view class="weui-uploader__bd">
          <view class="weui-uploader__files" id="uploaderFiles">
            <block wx:for="{{files}}" wx:key="*this">
              <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
              </view>
            </block>
          </view>
          <view class="weui-uploader__input-box">
            <view class="weui-uploader__input" bindtap="chooseImage"></view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="weui-cell_vcode" style='padding: 0 12px;margin: 70rpx 0 44rpx;'>
  <button class="weui-btn" type="primary" bindtap='next'>提交并发布</button>
</view>
<view style='text-align: center;'>
  注册即代表阅读并同意
  <text style='color: #219bf8;'>使用条款</text>和
  <text style='color: #219bf8;'>隐私政策</text>
</view>