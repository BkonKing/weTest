<view class="page">
  <view class="page-bg-title">
    专辑
  </view>
  <view class="page__bd">
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
        <navigator wx:for="{{albumList}}" wx:key="{{item.title}}" url="./recording" open-type="redirect" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{item.art}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{item.title}}</view>
            <view class="weui-media-box__desc">{{item.date}}</view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
  <navigator url='./recording' class='record-btn'>
    <image src='/static/images/recording.png' bindtap='message'></image>
    <text>录音</text>
  </navigator>
</view>